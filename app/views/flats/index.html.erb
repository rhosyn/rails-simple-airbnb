<div class="container" id="home-flats">
  <h2 class="text-center">All our flats</h2>
  <div class="row">
    <% @flats.each do |flat| %>
      <div class="col-xs-12 col-sm-6 col-md-4">
        <div class="card" style="background-image: linear-gradient(-225deg, rgba(0,0,0,0.5) 0%, rgba(0,0,0,0) 100%), url('https://kitt.lewagon.com/placeholder/cities/london');">
          <div class="card-category"><%= flat.name %></div>
          <div class="card-description">
            <h3><%= flat.name %></h3>
            <p><%= flat.address %></p>
          </div>
        </div>
          <div class="my-card-footer">
            <div class="footer-links">
        <p><i class="fas fa-dollar-sign"></i><%= flat.price_per_night %></p>
        <p><i class="fas fa-users"></i><%= flat.number_of_guests  %></p>
    </div>
           <p> <%= link_to "More info", flat_path(flat) %></p>
            <%= link_to "Edit", edit_flat_path(flat) %>
            <%= link_to "Remove", flat_path(flat),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
          </div>
      </div>
    <% end %>
  </div>
</div>
<%= render 'footer' %>
